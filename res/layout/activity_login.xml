<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/basic"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/nav_logo_text" />

    <EditText
        android:id="@+id/accName"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/abc_dropdownitem_icon_width"
        android:layout_marginRight="@dimen/abc_dropdownitem_icon_width"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="帳號"
        android:inputType="textEmailAddress" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/passwd"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/abc_dropdownitem_icon_width"
        android:layout_marginRight="@dimen/abc_dropdownitem_icon_width"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="密碼"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/passwd2"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/abc_dropdownitem_icon_width"
        android:layout_marginRight="@dimen/abc_dropdownitem_icon_width"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="確認密碼"
        android:inputType="textPassword"
        android:visibility="invisible" />

    <Button
        android:id="@+id/submitBut"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/abc_dropdownitem_icon_width"
        android:layout_marginRight="@dimen/abc_dropdownitem_icon_width"
        android:layout_marginTop="5dp"
        android:text="登入" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/loginRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="登入"
            android:textColor="@color/DeepBlue" />

        <RadioButton
            android:id="@+id/regRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:text="註冊"
            android:textColor="@color/DeepBlue" />
    </RadioGroup>

    <Button
        android:id="@+id/go"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/abc_dropdownitem_icon_width"
        android:layout_marginRight="@dimen/abc_dropdownitem_icon_width"
        android:layout_marginTop="5dp"
        android:text="先玩玩看" />

        <Button
        android:id="@+id/facebook"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/abc_dropdownitem_icon_width"
        android:layout_marginRight="@dimen/abc_dropdownitem_icon_width"
        android:layout_marginTop="5dp"
        android:text="Facebook" />
    
</LinearLayout>